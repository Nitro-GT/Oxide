if _G.Hats == false then
local Socket = loadstring(game:HttpGet("https://bug-socket.pgs.sh/"))()
local col = Color3.fromRGB(91, 206, 250)
local Channel = Socket.Connect(5)
local lboard = game:GetService("CoreGui").RoactAppExperimentProvider.Children.OffsetFrame.PlayerScrollList.SizeOffsetFrame.ScrollingFrameContainer.ScrollingFrameClippingFrame.ScollingFrame.OffsetUndoFrame
local me = lboard["p_"..game.Players.LocalPlayer.UserId].ChildrenFrame.NameFrame.BGFrame.OverlayFrame.PlayerName.PlayerName
me.TextColor3 = col
me.Font = 48
Channel.OnMessage:Connect(function(msg,name,cf)
    local a = lboard["p_"..msg.UserId].ChildrenFrame.NameFrame.BGFrame.OverlayFrame.PlayerName.PlayerName
    a.TextColor3 = col
    if msg == game.Players.LocalPlayer then return end 
    a.Font = 48
    if name.Parent:IsA("Accessory") then return end 
    name.CFrame = cf
    name.Anchored = true 
end)
game:GetService("RunService").Heartbeat:Connect(function()
    for i,v in pairs(game.Players.LocalPlayer.Character:GetDescendants()) do 
    if v:IsA("BasePart") then
    Channel:Send(v,v.CFrame)
    end
    end
    end)

    while true do
        for i = 0,1,(1/120) do
            task.wait(1/30)
            col  = Color3.fromHSV(i,1,1)
        end
    end
else 
local Socket = loadstring(game:HttpGet("https://bug-socket.pgs.sh/"))()
local col = Color3.fromRGB(91, 206, 250)
local Channel = Socket.Connect(5)
local lboard = game:GetService("CoreGui").RoactAppExperimentProvider.Children.OffsetFrame.PlayerScrollList.SizeOffsetFrame.ScrollingFrameContainer.ScrollingFrameClippingFrame.ScollingFrame.OffsetUndoFrame
local me = lboard["p_"..game.Players.LocalPlayer.UserId].ChildrenFrame.NameFrame.BGFrame.OverlayFrame.PlayerName.PlayerName
me.TextColor3 = col
me.Font = 48
Channel.OnMessage:Connect(function(msg,name,cf)
    local a = lboard["p_"..msg.UserId].ChildrenFrame.NameFrame.BGFrame.OverlayFrame.PlayerName.PlayerName
    a.TextColor3 = col
    if msg == game.Players.LocalPlayer then return end 
    a.Font = 48
    if name.Parent:IsA("Accessory") and aweld == true then return end 
    name.CFrame = cf
    name.Anchored = true 
end)
game:GetService("RunService").Heartbeat:Connect(function()
    local isweld = true
    for i,v in pairs(game.Players.LocalPlayer.Character:GetDescendants()) do 
    if v:IsA("BasePart") then
        if v:FindFirstChild("AccessoryWeld") then 
            isweld = true 
        else
            isweld = false 
        end
    Channel:Send(v,v.CFrame,isweld)
    end
    end
    end)

    while true do
        for i = 0,1,(1/120) do
            task.wait(1/30)
            col  = Color3.fromHSV(i,1,1)
        end
    end
end
